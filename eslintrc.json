{
  "extends": "standard",
  "env": {
    "mocha": true
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "max-len": ["warn"],
    "semi": ["error", "always"],
    "no-extra-semi": "error",
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "semi-spacing": ["error", { "before": false, "after": true }],
    "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
    }]
  }
}
